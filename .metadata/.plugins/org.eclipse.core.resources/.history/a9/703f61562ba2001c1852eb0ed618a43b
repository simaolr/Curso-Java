package fundamentos;

public class NotacaoPontos {
	public static void main(String[] args) {
		
		String s = "Bom dia X";
		s = s.toUpperCase();
		
		System.out.println(s);
		
		s1 = s.replace("X", "Senhora");
		s2 = s.concat("!!!");
		System.out.println(s1);
		System.out.println(s2);
		System.out.println("Lucas".toUpperCase());
		
	}
}
